{{#each todos}}
<div class="card card-body mb-2">
    <div class="row">
        <div class="col-md-9">
            <h3>{{title}}</h3>
            <p>{{details}}</p>
        </div>
        <div class="col-md-3">
            <h5>{{tag}}</h5>
        </div>
        <div class="col-md-6">
            <a href="/todo/edit/{{id}}" class="btn btn-warning btn-block mt-2 p-2">Edit</a>
        </div>
        <div class="col-md-6">
            <form action="/todo/{{id}}?_method=DELETE" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn btn-danger btn-block mt-2 p-2" value="Delete">
            </form>
        </div>
    </div>
</div>
{{else}}
<p>No Todo List</p>
{{/each}}